<h1>My Lists</h1>
<%= link_to '+ Add Task List', new_task_list_path %>

<% @task_lists.each do |task_list| %>

  <section class="task-list">
    <h1><%= link_to task_list.name, task_list_path(task_list) %> |
      <%= link_to 'Edit', edit_task_list_path(task_list) %> |
      <%= link_to '+ Add Task', new_task_list_task_path(task_list) %></h1>
    <% task_list.tasks.each do |task| %>
    <p class="task">
      <%= task.name %>
      <%= button_to 'Delete', {:controller => :tasks, action: 'destroy', id: task.id, task_list_id: task_list.id }, method: :delete %>
    </p>
    <% end %>
  </section>


<% end %>
